{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {{ form_start(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Информация о контакте</div>
            <div class="panel-body">
                {{ form_errors(form) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.fio) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.post) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.birthDate) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.phone) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.mobilePhone) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.comment) }}
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                {{ form_widget(form.save)}}
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}